{
  "experiment": {
    "name": "Civic Virtue Framework Validation Study",
    "version": "1.0.0", 
    "description": "Comprehensive validation of civic_virtue framework using presidential discourse with 6-layer QA integration",
    "hypothesis": "Civic virtue framework will show distinct patterns between inaugural addresses and policy-focused SOTU speeches, with reliable cross-model consistency",
    "research_context": "First comprehensive validation study for civic virtue framework implementation with real LLM analysis and QA validation",
    "tags": ["framework-validation", "civic-virtue", "presidential-rhetoric", "reliability-study"],
    "created_by": "narrative_gravity_research",
    "created_date": "2025-06-13"
  },
  "texts": {
    "sources": [
      {
        "type": "existing",
        "text_id": "obama_inaugural_2009",
        "file_path": "corpus/golden_set/presidential_speeches/txt/golden_obama_inaugural_01.txt",
        "notes": "Obama 2009 Inaugural - Hopeful, unifying rhetoric"
      },
      {
        "type": "existing", 
        "text_id": "trump_inaugural_2017",
        "file_path": "corpus/golden_set/presidential_speeches/txt/golden_trump_inaugural_01.txt",
        "notes": "Trump 2017 Inaugural - Populist, change-focused rhetoric"
      },
      {
        "type": "existing",
        "text_id": "biden_inaugural_2021", 
        "file_path": "corpus/golden_set/presidential_speeches/txt/golden_biden_inaugural_01.txt",
        "notes": "Biden 2021 Inaugural - Unity, healing-focused rhetoric"
      },
      {
        "type": "existing",
        "text_id": "bush_inaugural_2001",
        "file_path": "corpus/golden_set/presidential_speeches/txt/golden_bush_inaugural_01.txt", 
        "notes": "Bush 2001 Inaugural - Compassionate conservatism"
      },
      {
        "type": "existing",
        "text_id": "obama_sotu_2012",
        "file_path": "corpus/golden_set/presidential_speeches/txt/golden_obama_sotu_01.txt",
        "notes": "Obama 2012 SOTU - Policy-focused, economic recovery"
      },
      {
        "type": "existing",
        "text_id": "trump_sotu_2018", 
        "file_path": "corpus/golden_set/presidential_speeches/txt/golden_trump_sotu_01.txt",
        "notes": "Trump 2018 SOTU - America First policy agenda"
      },
      {
        "type": "existing",
        "text_id": "biden_sotu_2022",
        "file_path": "corpus/golden_set/presidential_speeches/txt/golden_biden_sotu_01.txt",
        "notes": "Biden 2022 SOTU - Build Back Better agenda"
      },
      {
        "type": "existing", 
        "text_id": "bush_sotu_2003",
        "file_path": "corpus/golden_set/presidential_speeches/txt/golden_bush_sotu_01.txt",
        "notes": "Bush 2003 SOTU - Post-9/11 security agenda"
      }
    ]
  },
  "frameworks": {
    "configurations": [
      {
        "type": "existing",
        "framework_id": "civic_virtue",
        "version": "v2025.06.12",
        "alias": "civic_virtue_standard",
        "notes": "Standard civic virtue framework for validation testing"
      }
    ]
  },
  "models": {
    "evaluators": [
      {
        "model": "gpt-4.1-mini",
        "alias": "gpt4_mini",
        "parameters": {
          "temperature": 0.1,
          "max_tokens": 4000
        },
        "cost_estimate_per_run": 0.0014
      }
    ]
  },
  "templates": {
    "prompt_templates": [
      {
        "type": "existing",
        "template_id": "hierarchical_v2.1.0", 
        "alias": "hierarchical_analysis"
      }
    ],
    "weighting_schemes": [
      {
        "type": "existing",
        "scheme_id": "hierarchical",
        "alias": "hierarchical_weighting"
      }
    ]
  },
  "execution": {
    "design_matrix": {
      "type": "reliability_study",
      "dimensions": ["texts"],
      "fixed_components": {
        "framework": "civic_virtue_standard",
        "prompt_template": "hierarchical_analysis", 
        "weighting_scheme": "hierarchical_weighting",
        "model": "gpt4_mini"
      }
    },
    "replication": {
      "runs_per_text": 3,
      "total_estimated_runs": 24,
      "randomize_order": true,
      "inter_run_delay_seconds": 2
    },
    "quality_assurance": {
      "enabled": true,
      "confidence_threshold": 0.7,
      "require_second_opinion_below": 0.5,
      "validate_all_runs": true
    },
    "cost_controls": {
      "max_total_cost": 0.10,
      "cost_per_run_limit": 0.005,
      "confirm_before_execution": true
    }
  },
  "success_criteria": {
    "primary_metrics": [
      {
        "name": "reliability_coefficient_variation",
        "target": "< 0.20",
        "description": "Coefficient of variation across runs for each text should be below 0.20"
      },
      {
        "name": "qa_confidence_rate",
        "target": "> 80%",
        "description": "At least 80% of runs should achieve HIGH or MEDIUM QA confidence"
      }
    ],
    "secondary_metrics": [
      {
        "name": "framework_fit_score",
        "target": "> 0.75",
        "description": "Average framework fit score should exceed 0.75"
      },
      {
        "name": "differentiation_capacity", 
        "target": "measurable",
        "description": "Framework should show measurable differences between inaugural vs SOTU rhetoric"
      }
    ]
  },
  "outputs": {
    "data_formats": ["csv", "feather", "json", "stata_dta"],
    "include_qa_reports": true,
    "include_visualizations": true,
    "academic_export": {
      "enabled": true,
      "primary_format": "r_package",
      "additional_formats": ["python_package"],
      "statistical_analysis": {
        "descriptive_statistics": true,
        "reliability_analysis": true,
        "comparative_analysis": true,
        "correlation_matrices": true,
        "significance_tests": ["anova", "t_test"]
      },
      "visualization_package": {
        "individual_plots": true,
        "comparative_plots": true,
        "interactive_html": true,
        "publication_ready_pdf": true,
        "custom_themes": ["academic"]
      },
      "replication_package": {
        "include_code": true,
        "include_data": true,
        "include_documentation": true,
        "analysis_scripts": ["r_analysis.R", "python_analysis.py"],
        "readme_documentation": true
      },
      "manuscript_support": {
        "methods_section": true,
        "results_tables": true,
        "figure_captions": true,
        "supplementary_materials": true
      }
    },
    "custom_reports": [
      {
        "type": "framework_validation_report",
        "include_qa_analysis": true,
        "include_reliability_metrics": true,
        "include_comparative_analysis": true
      }
    ]
  }
} 