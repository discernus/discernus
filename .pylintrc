[MASTER]
# Use all available processors
jobs=0

# Add files or directories to the blacklist
ignore=venv,__pycache__,.git,deprecated

# Load custom plugins only for essential checks
load-plugins=

[MESSAGES CONTROL]
# Disable overly strict checks that get in the way of development
# Focus on actual bugs and code quality
disable=
    # Disable overly strict style checks
    line-too-long,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    too-few-public-methods,
    too-many-instance-attributes,
    # Disable import order nitpicking
    wrong-import-order,
    ungrouped-imports,
    # Disable docstring requirements for development speed
    missing-docstring,
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    # Disable minor formatting issues
    trailing-whitespace,
    missing-final-newline

# Enable important bug-prevention checks
enable=
    # Type safety - prevents None attribute access
    no-member,
    # Logic errors
    undefined-variable,
    unused-variable,
    unused-import,
    # Syntax errors
    syntax-error,
    # Runtime errors
    import-error,
    # Potential bugs
    dangerous-default-value,
    redefined-builtin,
    redefined-outer-name

[REPORTS]
# Simplified reporting
output-format=text
reports=no
score=no

[BASIC]
# Reasonable naming conventions
good-names=i,j,k,ex,Run,_,e,f,id,db,pk,ui

[DESIGN]
# Relaxed complexity limits for development
max-args=10
max-locals=20
max-returns=10
max-branches=15
max-statements=50

[FORMAT]
# Flexible formatting
max-line-length=120
indent-string='    ' 